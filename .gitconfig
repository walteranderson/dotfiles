[user]
    name = Walter Anderson
    email = walteranderson19@gmail.com
[alias]
    br = branch
    prune = fetch --prune
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    wip = !git add -A && git commit -am "WIP"
    undo = reset HEAD~1 --mixed
    amend = commit -a --amend
[core]
    autocrlf = input
    ignorecase = false
[push]
    default = simple
[pull]
	ff = only
[init]
	defaultBranch = main
