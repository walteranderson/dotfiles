{
    "parser": "babel-eslint",
    "rules": {
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "no-undef": [0],
        "no-undef-init": [1],
        "eqeqeq": [2, "smart"],
        "guard-for-in": [2],
        "no-else-return": [2],
        "yoda": [2]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jquery": true,
        "commonjs": true
    },
    "plugins": [
        "react"
    ],
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "classes": true,
        "modules": true,
        "jsx": true
    }
}
