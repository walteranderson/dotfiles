{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "no-undef": [
            1
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jquery": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": { "modules": true }
}
